{
  "name": "compose-image",
  "version": "0.1.0",
  "description": "Javascript image composition library using Canvas",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lepouya/compose-image.git"
  },
  "keywords": [
    "javascript",
    "typescript",
    "canvas",
    "image",
    "composition"
  ],
  "author": "Pouya Larjani <pouya.larjani@gmail.com> (https://github.com/lepouya)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lepouya/compose-image/issues"
  },
  "homepage": "https://github.com/lepouya/compose-image#readme",
  "type": "module",
  "main": "./dist/compose-image.umd.cjs",
  "module": "./dist/compose-image.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "default": "./dist/compose-image.js",
        "types": "./dist/index.d.ts"
      },
      "require": {
        "default": "./dist/compose-image.umd.cjs",
        "types": "./dist/index.d.ts"
      }
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "update": "rm -rf node_modules && npm update"
  },
  "devDependencies": {
    "@types/node": "^20.9.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.3",
    "vitest": "^0.34.6"
  }
}